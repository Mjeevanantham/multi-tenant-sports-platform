---
import { getCollection } from 'astro:content';
import Card from '../ui/Card';

const blogPosts = (await getCollection('blog')).slice(0, 5);
---

<section class="py-16">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-text mb-8 text-center">Blogs to Keep You Fit!</h2>
    <div class="flex gap-6 overflow-x-auto pb-4 scrollbar-hide">
      {blogPosts.map((post) => (
        <Card className="min-w-[300px] flex-shrink-0">
          <img 
            src={post.data.image || '/images/blog/placeholder.jpg'} 
            alt={post.data.title}
            class="w-full h-48 object-cover"
          />
          <div class="p-4">
            <h3 class="font-semibold text-lg mb-2">{post.data.title}</h3>
            <p class="text-sm text-gray-600 mb-3 line-clamp-2">
              {post.data.description}
            </p>
            <div class="flex justify-between items-center text-xs text-gray-500">
              <span>{post.data.pubDate.toLocaleDateString()}</span>
              <span>{post.data.author}</span>
            </div>
            <a 
              href={`/blog/${post.slug}`}
              class="text-primary hover:underline text-sm font-medium mt-3 inline-block"
            >
              Read More â†’
            </a>
          </div>
        </Card>
      ))}
    </div>
  </div>
</section>

