---
const tenant = Astro.locals.tenant;
---

<section class="bg-secondary py-16 md:py-24 mt-16">
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div>
        <div class="mb-8">
          <div class="relative max-w-md">
            <input
              type="text"
              placeholder="Coimbatore"
              class="w-full px-5 py-3.5 pl-12 bg-white border border-gray-200 rounded-full focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent shadow-sm text-sm"
            />
            <div
              class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-500"
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
          </div>
        </div>
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold text-text mb-6 leading-tight"
        >
          FIND PLAYERS & VENUES NEARBY
        </h1>
        <p class="text-lg md:text-xl text-gray-700 mb-8 leading-relaxed">
          Seamlessly explore sports venues and play with sports enthusiasts just
          like you!
        </p>
      </div>
      <div class="relative">
        <div class="grid grid-cols-2 gap-3 md:gap-4">
          <div class="space-y-3 md:space-y-4">
            <div
              class="aspect-square bg-gray-200 rounded-xl overflow-hidden shadow-md"
            >
              <img
                src="/images/hero/basketball-hoop.jpg"
                alt="Basketball Hoop"
                class="w-full h-full object-cover"
              />
            </div>
            <div
              class="aspect-square bg-gray-200 rounded-xl overflow-hidden shadow-md"
            >
              <img
                src="/images/hero/football.jpg"
                alt="Football"
                class="w-full h-full object-cover"
              />
            </div>
          </div>
          <div class="space-y-3 md:space-y-4 pt-8 md:pt-12">
            <div
              class="aspect-square bg-gray-200 rounded-xl overflow-hidden shadow-md"
            >
              <img
                src="/images/hero/badminton.jpg"
                alt="Badminton"
                class="w-full h-full object-cover"
              />
            </div>
            <div
              class="aspect-square bg-gray-200 rounded-xl overflow-hidden shadow-md"
            >
              <img
                src="/images/hero/basketball.jpg"
                alt="Basketball"
                class="w-full h-full object-cover"
              />
            </div>
          </div>
        </div>
        <div
          class="absolute -left-6 md:-left-12 top-1/2 transform -translate-y-1/2 -rotate-90 text-4xl md:text-6xl font-bold text-gray-300 opacity-30 whitespace-nowrap pointer-events-none"
        >
          parkwood play
        </div>
      </div>
    </div>
  </div>
</section>
