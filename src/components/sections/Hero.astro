<section class="bg-secondary py-20 mt-16">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div>
        <div class="mb-6">
          <div class="relative">
            <input
              type="text"
              placeholder="Coimbatore"
              class="w-full px-4 py-3 pl-12 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
            />
            <div class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
          </div>
        </div>
        <h1 class="text-5xl font-bold text-text mb-6">
          FIND PLAYERS & VENUES NEARBY
        </h1>
        <p class="text-lg text-gray-600 mb-8">
          Seamlessly explore sports venues and play with sports enthusiasts just like you!
        </p>
      </div>
      <div class="relative">
        <div class="grid grid-cols-2 gap-4">
          <div class="space-y-4">
            <div class="aspect-square bg-gray-200 rounded-lg overflow-hidden">
              <img src="/images/hero/basketball.jpg" alt="Basketball" class="w-full h-full object-cover" />
            </div>
            <div class="aspect-square bg-gray-200 rounded-lg overflow-hidden">
              <img src="/images/hero/football.jpg" alt="Football" class="w-full h-full object-cover" />
            </div>
          </div>
          <div class="space-y-4 pt-8">
            <div class="aspect-square bg-gray-200 rounded-lg overflow-hidden">
              <img src="/images/hero/badminton.jpg" alt="Badminton" class="w-full h-full object-cover" />
            </div>
            <div class="aspect-square bg-gray-200 rounded-lg overflow-hidden">
              <img src="/images/hero/basketball-hoop.jpg" alt="Basketball Hoop" class="w-full h-full object-cover" />
            </div>
          </div>
        </div>
        <div class="absolute -left-8 top-1/2 transform -translate-y-1/2 -rotate-90 text-6xl font-bold text-gray-800 opacity-20 whitespace-nowrap">
          parkwood play
        </div>
      </div>
    </div>
  </div>
</section>

