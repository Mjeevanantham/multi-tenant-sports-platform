---
const tenant = Astro.locals.tenant;
---

<footer class="bg-footer-bg text-white py-12">
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div>
        <h3 class="text-2xl font-bold mb-4">{tenant.name}</h3>
        <p class="text-gray-400 text-sm leading-relaxed">{tenant.footerText}</p>
      </div>
      
      <div>
        <h4 class="font-semibold mb-4 text-base">Company</h4>
        <ul class="space-y-2.5 text-sm text-gray-400">
          {tenant.companyLinks.about && <li><a href={tenant.companyLinks.about} class="hover:text-white transition-colors">ABOUT US</a></li>}
          {tenant.companyLinks.blogs && <li><a href={tenant.companyLinks.blogs} class="hover:text-white transition-colors">BLOGS</a></li>}
          {tenant.companyLinks.contact && <li><a href={tenant.companyLinks.contact} class="hover:text-white transition-colors">CONTACT</a></li>}
          {tenant.companyLinks.careers && <li><a href={tenant.companyLinks.careers} class="hover:text-white transition-colors">CAREERS</a></li>}
          {tenant.companyLinks.partner && <li><a href={tenant.companyLinks.partner} class="hover:text-white transition-colors">PARTNER WITH US</a></li>}
        </ul>
      </div>
      
      <div>
        <h4 class="font-semibold mb-4 text-base">Social</h4>
        <ul class="space-y-2.5 text-sm text-gray-400">
          {tenant.socialLinks.instagram && <li><a href={tenant.socialLinks.instagram} class="hover:text-white transition-colors">INSTAGRAM</a></li>}
          {tenant.socialLinks.facebook && <li><a href={tenant.socialLinks.facebook} class="hover:text-white transition-colors">FACEBOOK</a></li>}
          {tenant.socialLinks.linkedin && <li><a href={tenant.socialLinks.linkedin} class="hover:text-white transition-colors">LINKEDIN</a></li>}
          {tenant.socialLinks.twitter && <li><a href={tenant.socialLinks.twitter} class="hover:text-white transition-colors">TWITTER</a></li>}
        </ul>
      </div>
      
      <div>
        <h4 class="font-semibold mb-4 text-base">Privacy & Terms</h4>
        <ul class="space-y-2.5 text-sm text-gray-400">
          <li><a href="/faq" class="hover:text-white transition-colors">FAQS</a></li>
          <li><a href="/privacy" class="hover:text-white transition-colors">PRIVACY POLICY</a></li>
          <li><a href="/terms" class="hover:text-white transition-colors">TERMS OF SERVICE</a></li>
          <li><a href="/cancellation" class="hover:text-white transition-colors">CANCELLATION POLICY</a></li>
        </ul>
      </div>
    </div>
  </div>
</footer>

